    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_baseline_menu_24" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_baseline_notifications_24"
                    android:layout_alignParentEnd="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/menu"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_baseline_person_24"

                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello,"
                            android:textColor="#000"
                            android:textSize="8pt"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maria!"
                            android:textColor="#000"
                            android:textSize="10pt"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_baseline_create_24"
                        android:layout_marginTop="33dp"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardBackgroundColor="#D9D9D9"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_login"
                    >
                    <ImageView
                        android:id="@+id/iv_ass"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_assignment_24"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kandang A"
                        android:textColor="#FFF"
                        android:textSize="14pt"
                        android:layout_toRightOf="@+id/iv_ass"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_baseline_library_add_24"
                        android:layout_toRightOf="@id/tv_A"
                        android:layout_marginTop="58dp"
                        android:layout_marginLeft="5dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>