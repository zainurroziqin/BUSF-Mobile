<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
<!--                <ImageButton-->
<!--                    android:id="@+id/menu"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:background="@drawable/ic_baseline_menu_24" />-->

<!--                <ImageButton-->
<!--                    android:onClick="intentAlarm"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:background="@drawable/ic_baseline_notifications_24" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUser"
                        android:layout_width="220px"
                        android:layout_height="220px"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_baseline_person_24"

                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello,"
                            android:textColor="#000"
                            android:textSize="8pt"
                            android:layout_marginTop="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maria!"
                            android:textColor="#000"
                            android:textSize="10pt"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/btn_logout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_baseline_create_24"
                        android:layout_marginTop="33dp"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKandangA"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardBackgroundColor="#FFFFFF"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_login"
                    >
                    <ImageView
                        android:id="@+id/iv_ass"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_assignment_24"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kandang A"
                        android:textColor="#FFF"
                        android:textSize="14pt"
                        android:layout_toRightOf="@+id/iv_ass"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_baseline_library_add_24"
                        android:layout_toRightOf="@id/tv_A"
                        android:layout_marginTop="58dp"
                        android:layout_marginLeft="5dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKandangB"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardBackgroundColor="#D9D9D9"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_kb"
                    >
                    <ImageView
                        android:id="@+id/iv_asd"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_assignment_24"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kandang B"
                        android:textColor="#FFF"
                        android:textSize="14pt"
                        android:layout_toRightOf="@+id/iv_asd"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_baseline_library_add_24"
                        android:layout_toRightOf="@id/tv_B"
                        android:layout_marginTop="58dp"
                        android:layout_marginLeft="5dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKandangC"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardBackgroundColor="#D9D9D9"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_kc"
                    >
                    <ImageView
                        android:id="@+id/iv_ase"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_assignment_24"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kandang C"
                        android:textColor="#FFF"
                        android:textSize="14pt"
                        android:layout_toRightOf="@+id/iv_ase"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_baseline_library_add_24"
                        android:layout_toRightOf="@id/tv_C"
                        android:layout_marginTop="58dp"
                        android:layout_marginLeft="5dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKandangD"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardBackgroundColor="#D9D9D9"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_kd"
                    >
                    <ImageView
                        android:id="@+id/iv_asf"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_assignment_24"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kandang D"
                        android:textColor="#FFF"
                        android:textSize="14pt"
                        android:layout_toRightOf="@+id/iv_asf"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_baseline_library_add_24"
                        android:layout_toRightOf="@id/tv_D"
                        android:layout_marginTop="58dp"
                        android:layout_marginLeft="5dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright"
            android:textColor="#000"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_copyright_black_24"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barokah Farm 2021"
            android:textColor="#000"
            />
    </LinearLayout>
</RelativeLayout>